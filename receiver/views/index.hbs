<div class="container-fluid">

    <header class="col">
        <h1>{{title}}</h1>
        <p>Welcome to {{title}}</p>
    </header>

    <nav class="col-2">
        <ul class="nav flex-column nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#">Inbox</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Outbox</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Archived</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Bin</a></li>
        </ul>
    </nav>

    <main class="col">
        <div id="messages" class="list-group">
            {{#each messages }}
                <a href="" class="list-group-item list-group-item-action">
                    <span class="actor">{{this.content}}</span>
                    lorem ipsum {{this.content}}
                    <span class="date">10:23</span>
                </a>
            {{/each}}
        </div>
    </main>
</div>
