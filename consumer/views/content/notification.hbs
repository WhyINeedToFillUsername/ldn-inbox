<header class="row">
    <div class="col">
        <h1>{{title}}</h1>
    </div>
</header>

<div class="row">
    <!-- TODO create a module of the menu -->
    <nav class="col-2">
        <ul class="nav flex-column nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#">Inbox</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Outbox</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Archived</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Bin</a></li>
        </ul>
    </nav>

    <main class="col">
        {{#if error}}
            <!-- TODO create a module of the error -->
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{error}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}

        <div class="card">
            <div class="card-header actions">
                <a href="/" title="Back to inbox"><i class="fas fa-arrow-left"></i></a>
                {{#if notification}}
                    <a href="" title="Delete"><i class="fas fa-trash-alt"></i></a>
                    <span class="float-right">From: <a href="" title="From">{{notification.attributedTo}}</a> 10:23</span>
                {{/if}}
            </div>
            <div class="card-body">
                {{#if notification}}
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">
                        {{notification.content}}
                    </p>
                {{else}}
                    <p class="card-text">No content available</p>
                {{/if}}
            </div>
        </div>
    </main>
</div>
