<header class="row">
    <div class="col">
        <h1>{{title}}</h1>
    </div>
</header>

<div class="row">
    {{> menu }}

    <main class="col">
        {{> errorAlert }}

        <div class="card">
            <div class="card-header actions">
                <a href="/notifications" title="Back to inbox"><i class="fas fa-arrow-left"></i></a>
            </div>
            <div class="card-body">
                {{#if notification}}
                    <h5 class="card-title">Notification id: '{{id}}'</h5>
                    <pre>{{notification}}</pre>
                {{else}}
                    <p class="card-text">No content available</p>
                {{/if}}
            </div>
        </div>
    </main>
</div>
